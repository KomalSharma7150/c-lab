#include <iostream>
using namespace std;

int main() {
    int number;
    int validCount = 0;

    cout << "Enter a number (Enter 0 to stop):" << endl;
    cin >> number;

    while (number != 0) {
        if (number % 8 == 0) {
            validCount++;
        }

        cout << "Enter a number (Enter 0 to stop):" << endl;
        cin >> number;
    }

    cout << "Total " << validCount << " numbers are valid numbers." << endl;

    return 0;
}
